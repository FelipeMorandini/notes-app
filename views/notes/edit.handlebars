<h2>Edit Note: {{ note.title }}</h2>
<form action="/notes/update" method="POST">
    <input type="hidden" name="id" value="{{ note._id }}">
    <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="What's on your mind?" value="{{ note.title }}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description:</label>
        <textarea name="description" id="description" class="form-control" placeholder="Describe your note">{{ note.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>